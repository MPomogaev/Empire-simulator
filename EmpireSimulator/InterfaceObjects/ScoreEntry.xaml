<UserControl x:Class="EmpireSimulator.InterfaceObjects.ScoreEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmpireSimulator.InterfaceObjects"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </UserControl.Resources>
    <UniformGrid Columns="1" Margin="10">
        <Label x:Name="EmpireNameLabel" Style="{StaticResource LabelStyle}" VerticalAlignment="Bottom" FontWeight="Bold">123</Label>
        <local:NamedCounter x:Name="EmpireScoreCounter" CounterName="Счёт:" IsBold="False" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </UniformGrid>
</UserControl>
