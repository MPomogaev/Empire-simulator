<UserControl x:Class="EmpireSimulator.InterfaceObjects.BuildingsPanelObject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmpireSimulator.InterfaceObjects"
             xmlns:buildings="clr-namespace:EmpireSimulator.InterfaceObjects.Buildings"
             mc:Ignorable="d" 
             d:DesignHeight="560" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <buildings:BuildingsBlock x:Name="FoodBuildings" Color="Green"/>
        <buildings:BuildingsBlock x:Name="ProductionBuildings" Color="Orange" Grid.Row="1"/>
        <buildings:BuildingsBlock x:Name="MoneyBuildings" Color="Gold" Grid.Row="2"/>
        <buildings:BuildingsBlock x:Name="ScienceBuildings" Color="Blue" Grid.Row="3"/>
    </Grid>
</UserControl>
