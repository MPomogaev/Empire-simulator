<UserControl x:Class="EmpireSimulator.InterfaceObjects.Buildings.BuildingsBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmpireSimulator.InterfaceObjects.Buildings"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        <local:SmallBuilding x:Name="Small"/>
        <local:BuildingCounter x:Name="SmallCounter" Grid.Row="1"/>
        <local:MediumBuilding x:Name="Medium" Grid.Column="1"/>
        <local:BuildingCounter x:Name="MediumCounter" Grid.Row="1" Grid.Column="1"/>
        <local:LargeBuilding x:Name="Large" Grid.Column="2"/>
        <local:BuildingCounter x:Name="LargeCounter" Grid.Row="1" Grid.Column="2"/>
    </Grid>
</UserControl>
