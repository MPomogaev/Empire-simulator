<UserControl x:Class="EmpireSimulator.InterfaceObjects.NamedCounter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmpireSimulator.InterfaceObjects"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal">
        <Label x:Name="CounterNameLabel" FontWeight="Bold" FontSize="16px" VerticalAlignment="Center" Content="Name"/>
        <Label x:Name="CounterLabel"  FontWeight="Bold" FontSize="16px" VerticalAlignment="Center" Content="Count" />
    </StackPanel>
</UserControl>
